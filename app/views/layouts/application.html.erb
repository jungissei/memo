<!DOCTYPE html>
<html>
  <head>
    <title>Src</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/a5ec3dea41.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <!-- 固定ナビゲーションバー -->
      <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="collapse navbar-collapse" id="navbar-header">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item"><%= link_to("ホーム", root_path, class: "nav-link") %></li>
            <% if user_signed_in? %>
              <li class="nav-item"><%= link_to("暗記カード", posts_path, class: "nav-link") %></li>
              <li class="nav-item"><%= link_to("学習する", learns_path, class: "nav-link") %></li>
              <li class="nav-item"><%= link_to("ユーザー", edit_user_registration_path, class: "nav-link") %></li>
              <li class="nav-item"><%= link_to("ログアウト", destroy_user_session_path, method: :delete, class: "nav-link") %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <main role="main" class="flex-shrink-0 mt-5 pt-5">
      <div class="container">
        <div class="row">
          <div class="col-12 col-md-5 m-auto">
            <% if notice %>
            　　<div class="alert alert-success"><%= notice %></div>
            <% end %>
            <% if alert %>
              <div class="alert alert-danger"><%= alert %></div>
            <% end %>
          </div>
        </div>
        <%= yield %>
      </div><!-- /container -->
    </main>

    <footer class="footer mt-auto py-3">
      <div class="container">

      </div>
    </footer>
  </body>
</html>