<div class="row">
  <div class="col-12 col-md-5 m-auto">
    <h1>カード一詳細</h1>
    <ul class="list-group mb-3">
        <li class="list-group-item">
          <div class="border-bottom">
            Q. <%= @post.question %>
          </div>
          <div>
            A. <%= @post.answer %>
          </div>
          <div class="mt-3 fs-0-8e">
            <div class="text-right">
              <div class="d-inline-block mr-2"><%= link_to '編集', edit_post_path(@post) %></div>
              <div class="d-inline-block mr-2"><%= link_to '削除', post_path(@post), method: :delete %></div>
            </div>
          </div>
        </li>
    </ul>
    <%= link_to 'カード一覧に戻る', posts_path, class:"btn btn-lg btn-primary btn-block" %>
  </div>
</div>